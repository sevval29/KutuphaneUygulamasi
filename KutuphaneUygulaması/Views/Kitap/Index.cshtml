<style>
    .card {
        width: 230px; 
        height:580px;
    }

    .card-body {
        text-align: center; 
    }

    .card img {
        width: 100%; 
        height: 330px; 
        object-fit: cover; 

    .btn-group {
        margin-right: 10px; 
    }

    

    .symbol {
        font-size: 40px; 
       
    }
</style>


<div>
    <a asp-controller="Kitap" asp-action="Create"
       class="btn btn-sm btn-success ">
        Yeni Kitap Ekle
    </a>
</div>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">

            @foreach(var item in Model){

                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.ResimUrl" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text"><strong>@item.KitapAd</strong></p>
                            <p class="card-text" >@item.Yazar</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
  
                                    
          <a asp-controller="Kitap" asp-action="OduncVer" asp-route-id="@item.ID"
                                   data-kart-id="@item.ID" class="btn btn-sm btn-success " >
                   Ödünç Ver</a>
                                    
                                </div>
                                 <small class="text-body-secondary">
                                     @if (item.KutuphaneDurumu)
                                         {
                                        <span class="symbol" style="color: green;font-size: 20px;">&#10003;</span>
                                        <span style="font-weight: bold; font-size: 12px;">Kütüphanede Mevcut</span>
                                         }
                                       else
                                         {
                                        <span class="symbol" style="color: red;font-size: 20px;">&#10007;</span>

                                        <span style="font-weight: bold; font-size: 12px;">Kütüphanede Mevcut Değil</span>
                                        <div style="margin-left: 10px;">
                                            <span style="font-size: 10px;">@item.OduncAlanAdi tarafından ödünç alınmıştır. Geri Getirme Tarihi: @item.GeriGetirmeTarihi</span>
                                        </div>
                                        
                                       
                                            }
                                  </small>
                            </div>
                        </div>
                    </div>
                </div>

            }

       
           
                    </div>
                </div>
            </div>









